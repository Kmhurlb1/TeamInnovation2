    height: 100%;
    overflow: auto;
  }
  
  .leaderboard table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .leaderboard th, .leaderboard td {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: left;
  }
  
  .leaderboard th {
