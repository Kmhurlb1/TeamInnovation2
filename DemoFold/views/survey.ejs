     <main>
  <h1>Survey</h1>


  <div id="survey-questions"></div>

  <script>
// Get the survey questions from the server
fetch('/survey-questions')
  .then(response => response.json())
  .then(questions => {
    // Select the survey-questions div
    const surveyQuestionsDiv = document.getElementById('survey-questions');

    // Loop through the survey questions and create HTML elements to display them
    questions.forEach(question => {
      const questionDiv = document.createElement('div');
      questionDiv.innerHTML = `
        <h2>${question.question}</h2>
        <label for="${question.id}-yes">Yes</label>
        <input type="radio" name="${question.id}" value="yes" id="${question.id}-yes">
        <label for="${question.id}-no">No</label>
        <input type="radio" name="${question.id}" value="no" id="${question.id}-no">
      `;
      surveyQuestionsDiv.appendChild(questionDiv);
    });
  });
</script>




