  <div class="container" style="width: 63%;">
    <h1 style="font-size: 50px; text-align: center;">Personal Goals</h1>
    <h1>My Goals</h1>
    <form id="goal-form">
      <label for="goal-input" style="font-size: 16pt;">Enter a new goal:</label>
      <input type="text" id="goal-input">
      <button type="submit">Add</button>
    </form>
    <ul id="goal-list">
    </ul>
    <script>
      const goalForm = document.querySelector('#goal-form');
      const goalList = document.querySelector('#goal-list');
      let goals = [];
      goalForm.addEventListener('submit', (event) => {
        event.preventDefault();
        const goalInput = document.querySelector('#goal-input');
        const goalText = goalInput.value.trim();
        if (goalText.length === 0) {
          return;
        }
        goals.push(goalText);
        goalInput.value = '';
        renderGoals();
      });
      function renderGoals() {
        goalList.innerHTML = '';
        goals.forEach((goal) => {
          const goalListItem = document.createElement('li');
          goalListItem.textContent = goal;
          goalList.appendChild(goalListItem);
        });
      }
    </script>
    <ul id="personal-goals">
      <!-- Personal goals will be dynamically added here -->
    </ul>
