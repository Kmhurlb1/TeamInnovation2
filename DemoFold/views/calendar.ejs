<% const months = [
  { name: 'January', days: 31 },
  { name: 'February', days: 28 },
  { name: 'March', days: 31 },
  { name: 'April', days: 30 },
  { name: 'May', days: 31 },
  { name: 'June', days: 30 },
  { name: 'July', days: 31 },
  { name: 'August', days: 31 },
  { name: 'September', days: 30 },
  { name: 'October', days: 31 },
  { name: 'November', days: 30 },
  { name: 'December', days: 31 }
]; %>

<div class="calendar-container">
  <h2>Calendar</h2>
  <% const d = new Date(); %>
  <h3><%= d.getFullYear() %></h3>
  <% months.forEach(month => { %>
    <table class="month">
      <thead>
        <tr>
          <th colspan="7" class="month-name"><%= month.name %></th>
        </tr>
        <tr>
          <th>Sun</th>
          <th>Mon</th>
          <th>Tue</th>
          <th>Wed</th>
          <th>Thu</th>
          <th>Fri</th>
          <th>Sat</th>
        </tr>
      </thead>
      <tbody>
        <% let dayCount = 1; %>
        <% for (let week = 1; week <= 6; week++) { %>
          <tr>
            <% for (let day = 1; day <= 7; day++) { %>
              <% let goalName = ""; %>
              <% let goalStart = null; %>
              <% let goalEnd = null; %>
              <% goals.forEach(goal => {
                if (dayCount >= goal.start_date.getDate() && dayCount <= goal.finish_date.getDate()) {
                  goalName = goal.goal;
                  goalStart = goal.start_date.toISOString().slice(0, 10);
                  goalEnd = goal.finish_date.toISOString().slice(0, 10);
                }
              }); %>
              <% if (dayCount > month.days) { %>
                <td></td>
              <% } else if (goalName !== "") { %>
                <td class="day-square has-goal" data-toggle="tooltip" title="<%= goalName %> - <%= goalStart %> to <%= goalEnd %>"><%= dayCount %></td>
                <% dayCount++; %>
              <% } else { %>
                <td class="day-square"><%= dayCount %></td>
                <% dayCount++; %>
              <% } %>
            <% } %>
          </tr>
        <% } %>
      </tbody>
    </table>
  <% }); %>
